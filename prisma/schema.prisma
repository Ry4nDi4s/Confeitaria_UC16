// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id Int @id @default(autoincrement())

  which_product String
  who_order String
  value Float
  quantity Int
  delivery_day DateTime
  
  createdAt DateTime @map("created_at") @default (now())
  updatedAt DateTime @map("updated_at") @updatedAt

  // FK - Order
  orderId Int @map("Order_id")
  carrinhoId Int @map("carrinho_id") 
  
  carrinho Order @relation(fields: [carrinhoId], references: [id])
}

model Payment {
  id Int  @id @default(autoincrement())
 
  card String
  pix String
  money Float
  value Float
  scheduling String

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime  @map("updated_at") @updatedAt

  // FK - Payment
  paymentId Float @map("Payment_id")
  orderId Int @map("Order_id")

  payment Order?
}  

model Product {
  id Int @id @default(autoincrement())
  
  description String
  name String
  quantify Int 
  stock Float
  maturity DateTime

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt

  // Carregando o valor 1
  
  products Product[]
  // FK -> Product

  productId  Int @map("product_id")
  carrinhoId Int @map("carrinho_id") 
  receitaId  Int @map("receita_id")

  product       Product     @relation(fields: [productId], references: [id])
  carrinho      Product     @relation(fields: [carrinhoId], references: [id])
  receita       Product     @relation(fields: [receitaId], references: [id])
  @@map("products")
}


model User {
  id Int @id @default(autoincrement())

  name String
  email String
  password String
  phone String
  CPF String

  createdAt DateTime @map("created_at") @default(now())
  updatedAt DateTime @map("updated_at") @updatedAt
  
  
  // Carregando o valor 1
  users User[]

  // FK -> User
  userId Int @map("user_id")
  orderId Int @map("order_id")
  paymentId Int @map("payment_id")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  order User @relation(fields: [orderId], references: [id])
  payment User @relation(fields: [paymentId], references: [id])

  @@map("users")
}


